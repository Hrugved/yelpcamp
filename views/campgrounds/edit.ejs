<% include ../partials/header %>

<div class="container">
	<h1 class="text-center mt-5">Edit <%=camp.name%></h1>
	<div class="row">
	<div class="mx-auto col-5 mt-3">
		<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" class="form-control" name="camp[name]" value="<%=camp.name%>">
			</div>
			<div class="form-group">
				<input type="number" class="form-control" name="camp[price]" min="0.01" step="0.01" value="<%=camp.price%>">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="camp[image]" value="<%=camp.image%>">
			</div>
			<div class="form-group">
				<textarea rows="5" class="form-control" name="camp[description]"><%=camp.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block">Submit!</button>
			</div>	
		</form>	
		<a href="/campgrounds" class="text-center">Go Back</a>	
	</div>
	</div>
	
</div>



<% include ../partials/footer %>