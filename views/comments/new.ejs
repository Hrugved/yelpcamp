<% include ../partials/header %>

<div class="container">
	<h1 class="text-center mt-5">Add a Comment to <%=camp.name%></h1>
	<div class="row">
	<div class="mx-auto col-5 mt-3">
		<form action="/campgrounds/<%=camp._id%>/comments" method="POST">
			<div class="form-group">
				<textarea rows="5" class="form-control" name="comment[text]" placeholder="Tell us how you fell about <%=camp.name%>"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block">Submit!</button>
			</div>	
		</form>	
		<a href="/campgrounds/<%=camp._id%>" class="text-center">Go Back</a>	
	</div>
	</div>
</div>

<% include ../partials/footer %>